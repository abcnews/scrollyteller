{
  "name": "@abcnews/scrollyteller",
  "version": "4.0.3",
  "description": "A scrollytelling React component",
  "repository": {
    "type": "git",
    "url": "https://github.com/abcnews/scrollyteller.git"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build && husky install",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "analyse": "size-limit --why",
    "release": "np"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/scrollyteller.esm.js",
  "size-limit": [
    {
      "path": "dist/scrollyteller.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/scrollyteller.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.6.0",
    "@testing-library/react": "^11.0.4",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "identity-obj-proxy": "^3.0.0",
    "np": "^7.5.0",
    "react-test-renderer": "^17.0.2",
    "rollup-plugin-postcss": "^4.0.0",
    "sass": "^1.26.11",
    "size-limit": "^4.6.0",
    "tsdx": "^0.14.0",
    "tslib": "^2.0.1",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@abcnews/alternating-case-to-object": "^3.0.2",
    "@abcnews/mount-utils": "^2.0.0"
  },
  "peerDependencies": {
    "react": ">=16 <18",
    "react-dom": ">=16 <18"
  }
}
